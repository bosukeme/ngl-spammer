<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/dist/main.css">
    <title>
        <%= title %>
    </title>
</head>

<body class="h-full bg-gray-400">
    <% if (errorMessage && errorMessage.length> 0) { %>
        <div id="flashError"
            class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded mb-4 flex justify-between items-center">
            <span>
                <%= errorMessage[0] %>
            </span>
            <button onclick="document.getElementById('flashError').style.display='none'"
                class="text-red-800 font-bold ml-4">√ó</button>
        </div>
        <% } %>

    <% if (successMessage && successMessage.length> 0) { %>
        <div id="flashMessage"
            class="bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded mb-4 flex justify-between items-center">
            <span>
                <%= successMessage[0] %>
            </span>
            <button onclick="document.getElementById('flashMessage').style.display='none'"
                class="text-green-800 font-bold ml-4">√ó</button>
        </div>
        <% } %>


    <div class="mt-10 mb-8">
        <h1 class="text-4xl font-extrabold font-mono text-center"> NGL Spammer ‚ô†Ô∏èüïµÔ∏è‚Äç‚ôÇÔ∏è</h1>
    </div>

    <form method="POST" action="/submit"  class="flex flex-col space-y-4 p-4 max-w-sm mx-auto bg-white rounded-lg shadow-md">
        <!-- Radio button group -->
        <div>
            <label class="block text-lg font-medium">Number of Spam Message:</label>
            <div class="flex space-x-4 mt-1">
                <label class="flex items-center space-x-2">
                    <input type="radio" name="spamNumber" value="spamNumber1" class="h-4 w-4 text-blue-500" required>
                    <span>5</span>
                </label>
                <label class="flex items-center space-x-2">
                    <input type="radio" name="spamNumber" value="spamNumber2" class="h-4 w-4 text-blue-500">
                    <span>10</span>
                </label>
                <label class="flex items-center space-x-2">
                    <input type="radio" name="spamNumber" value="spamNumber3" class="h-4 w-4 text-blue-500">
                    <span>15</span>
                </label>
            </div>
        </div>
    
        <!-- Text input -->
        <div>
            <label for="textInput" class="block text-lg font-medium">Enter NGL Username</label>
            <input type="text" id="nglName" name="nglName"
                class="mt-1 p-2 w-full border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                placeholder="username" required>
        </div>

        <div>
            <label for="textInput" class="block text-lg font-medium">Enter text:</label>
            <input type="text" id="textInput" name="textInput"
                class="mt-1 p-2 w-full border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                placeholder="Type message or question" required>
        </div>
    
        <!-- Submit button -->
        <button type="submit"
            class="mt-2 py-2 px-4 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 transition">
            Submit
        </button>
    </form>

    <script>
  setTimeout(() => {
    const flash = document.getElementById('flashMessage');
    if (flash) flash.style.display = 'none';
  }, 3000);
</script>

    
</body>

</html>